{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Course list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Coursename</th>
                <th>Coursealias</th>
                <th>Crredmen</th>
                <th>Crbluemen</th>
                <th>Cryellowmen</th>
                <th>Crwhitemen</th>
                <th>Crredladies</th>
