{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Round</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Courseid</th>
                <td>{{ entity.courseId }}</td>
            </tr>
            <tr>
                <th>Starttime</th>
                <td>{{ entity.startTime }}</td>
            </tr>
            <tr>
                <th>Endtime</th>
                <td>{{ entity.endTime }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('round') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('round_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('round_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
