{% extends '::base.html.twig' %}

{% block body -%}
    <h1>roundScore list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Roundid</th>
                <th>Holeid</th>
                <th>Score</th>
                <th>Round_hcp</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('roundscore_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.roundId }}</td>
                <td>{{ entity.holeId }}</td>
                <td>{{ entity.score }}</td>
                <td>{{ entity.roundhcp }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('roundscore_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('roundscore_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('roundscore_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
