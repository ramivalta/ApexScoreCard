{% extends '::base.html.twig' %}

{% block body -%}
    <h1>roundScore</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Roundid</th>
                <td>{{ entity.roundId }}</td>
            </tr>
            <tr>
                <th>Holeid</th>
                <td>{{ entity.holeId }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ entity.score }}</td>
            </tr>
            <tr>
                <th>Round_hcp</th>
                <td>{{ entity.roundhcp }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('roundscore') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('roundscore_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('roundscore_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
