{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Hole</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Courseid</th>
                <td>{{ entity.courseId }}</td>
            </tr>
            <tr>
                <th>Hole number</th>
                <td>{{ entity.holeNumber }}</td>
            </tr>
            <tr>
                <th>Par</th>
                <td>{{ entity.par }}</td>
            </tr>
            <tr>
                <th>Hcp</th>
                <td>{{ entity.hcp }}</td>
            </tr>
            <tr>
                <th>Red</th>
                <td>{{ entity.lengthRed }}</td>
            </tr>
            <tr>
                <th>Yellow</th>
                <td>{{ entity.lengthYellow }}</td>
            </tr>
            <tr>
                <th>Blue</th>
                <td>{{ entity.lengthBlue }}</td>
            </tr>
            <tr>
                <th>White</th>
                <td>{{ entity.lengthWhite }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('hole') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('hole_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('hole_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
